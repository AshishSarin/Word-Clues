<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="15dp"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_width="match_parent"
    android:background="@color/red_backgorund_a2z"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textview_final_message"
        android:textSize="35sp"
        android:layout_marginTop="10dp"
        android:textStyle="bold"
        android:textColor="@color/yellow_backgorund_a2z"
        android:text="YOU GOT IT!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:layout_marginTop="20dp"
        android:textSize="35sp"
        android:textStyle="bold"
        android:textColor="#000000"
        android:id="@+id/word_gameover_textview"
        android:text="DATABASE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


        <TextView
            android:textStyle="bold"
            android:id="@+id/level_gameover"
            android:text="1 / 26"
            android:textColor="#000000"
            android:textSize="21sp"
            android:layout_margin="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    <LinearLayout
        android:layout_marginTop="4dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:stateListAnimator="@null"
            android:textColor="@color/text_color_a2z"
            android:textStyle="bold"
            android:background="@drawable/flat_selector_rate"
            android:layout_margin="10dp"
            android:id="@+id/btn_quit"
            android:text="Back"
            android:textAllCaps="false"
            android:layout_width="105dp"
            android:layout_height="35.3dp" />

        <Button
            android:stateListAnimator="@null"
            android:textColor="@color/text_color_a2z"
            android:textStyle="bold"
            android:background="@drawable/flat_selector_rate"
            android:layout_margin="10dp"
            android:id="@+id/btn_continue"
            android:text="Continue"
            android:textAllCaps="false"
            android:layout_width="105dp"
            android:layout_height="35.3dp" />


    </LinearLayout>

</LinearLayout>