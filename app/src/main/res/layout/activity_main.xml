<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/red_backgorund_a2z"
    android:layout_height="match_parent">



    <LinearLayout
        android:alpha="0.30"
        android:background="@mipmap/main_bkg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



    <RelativeLayout
        android:id="@+id/main_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent">


        <LinearLayout
            android:id="@+id/word_layout"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="45dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">


            <TextView
                android:text="W"
                android:layout_marginRight="8dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center"
                android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp" />

            <TextView
                android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:text="O"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />

            <TextView
                android:layout_marginRight="8dp"
                android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:text="R"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />

            <TextView
                android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:text="D"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />



        </LinearLayout>


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_below="@id/word_layout"
            android:paddingTop="15dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:text="C"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />

            <TextView android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:text="L"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />



            <TextView android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:layout_marginRight="8dp"
                android:text="U"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />

            <TextView
                android:layout_marginRight="8dp"
                android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:text="E"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />

            <TextView android:textSize="30sp"
                android:layout_width="40dp"
                android:layout_height="48dp"
                android:text="S"
                android:textColor="#000000"
                android:textStyle="bold"
                android:background="@drawable/rect_pressed_start"
                android:gravity="center" />


        </LinearLayout>


        <Button
            android:stateListAnimator="@null"
            android:background="@drawable/flat_selector_start"
            android:onClick="onClickStart"
            android:layout_centerInParent="true"
            android:minWidth="150dp"
            android:textSize="25sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:text="S T A R T"
            android:layout_width="225dp"
            android:layout_height="52dp" />


        <LinearLayout
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="100dp"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:onClick="onClickSettings"
                android:id="@+id/img_btn_settings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_settings"/>

            <ImageView
                android:onClick="onClickShare"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/img_btn_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_share"/>


            <ImageView
                android:onClick="onClickAbout"
                android:id="@+id/img_btn_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_info"/>

        </LinearLayout>





    </RelativeLayout>

</FrameLayout>